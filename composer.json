{
    "name": "worksome/ceevee",
    "description": "Simple CV and Resume parsing for Laravel applications.",
    "keywords": [
        "worksome",
        "laravel",
        "ceevee"
    ],
    "homepage": "https://github.com/worksome/ceevee",
    "license": "MIT",
    "authors": [
        {
            "name": "Luke Downing",
            "email": "lukeraymonddowning@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.14.1",
        "illuminate/contracts": "^9.46|^10.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.4",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.4",
        "orchestra/testbench": "^7.17|^8.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.4",
        "pestphp/pest-plugin-parallel": "^1.2",
        "worksome/coding-style": "^2.3.2",
        "worksome/pest-plugin-silence": "^0.1"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\Ceevee\\": "src",
            "Worksome\\Ceevee\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\Ceevee\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/ecs --fix",
        "test:unit": "vendor/bin/pest --exclude-group=integration",
        "test:coverage": "vendor/bin/pest --coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": "vendor/bin/ecs",
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "worksome/coding-style": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Worksome\\Ceevee\\Providers\\CeeveeServiceProvider"
            ],
            "aliases": {
                "Ceevee": "Worksome\\Ceevee\\Facades\\Ceevee"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
