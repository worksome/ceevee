{
    "name": "worksome/ceevee",
    "description": "Simple CV and Resume parsing for Laravel applications.",
    "keywords": [
        "worksome",
        "laravel",
        "ceevee"
    ],
    "homepage": "https://github.com/worksome/ceevee",
    "license": "MIT",
    "authors": [
        {
            "name": "Luke Downing",
            "email": "lukeraymonddowning@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^11.0 || ^12.0",
        "spatie/laravel-package-tools": "^1.19"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.8",
        "larastan/larastan": "^3.1",
        "nunomaduro/collision": "^7.10 || ^8.1.1",
        "orchestra/testbench": "^9.12 || ^10.1",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-laravel": "^3.1",
        "worksome/coding-style": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\Ceevee\\": "src",
            "Worksome\\Ceevee\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\Ceevee\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/ecs --fix",
        "test:unit": "vendor/bin/pest --exclude-group=integration",
        "test:coverage": "vendor/bin/pest --coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": "vendor/bin/ecs",
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "worksome/coding-style": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Worksome\\Ceevee\\Providers\\CeeveeServiceProvider"
            ],
            "aliases": {
                "Ceevee": "Worksome\\Ceevee\\Facades\\Ceevee"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
